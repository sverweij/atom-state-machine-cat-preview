'.source.smcat':
  'smcat skeleton':
    prefix: 'fsm'
    body: """
    // states
    # a note for ${1:state_a}
    ${1:state_a},
    ${3:state_b}: ${4:"activities"};

    // transitions
    initial => ${1:state_a};
    ${1:state_a} => ${3:state_b}: ${5:"label"};
    $6
    ${3:state_b} >> final;
    """
  'smcat transition':
    prefix: 'tran'
    body: """
    ${1:from_state} => ${2:to_state}: ${3:"label"};
    """
  'smcat composite state':
    prefix: 'comp'
    body: """
    ${1:composite_state} {
      ${2:inner_state_from} => ${3:inner_state_to}: ${4:"label"};
    }$5
    """
